<config>
    <modules>
        <Toluca_Bot>
            <version>0.0.8</version>
        </Toluca_Bot>
    </modules>
    <global>
        <helpers>
            <bot>
                <class>Toluca_Bot_Helper</class>
            </bot>
        </helpers>
        <blocks>
            <bot>
                <class>Toluca_Bot_Block</class>
            </bot>
        </blocks>
        <models>
            <bot>
                <class>Toluca_Bot_Model</class>
                <resourceModel>bot_mysql4</resourceModel>
            </bot>
            <bot_mysql4>
                <class>Toluca_Bot_Model_Mysql4</class>
                <entities>
                    <chat>
                        <table>toluca_bot_chat</table>
                    </chat>
                    <contact>
                        <table>toluca_bot_contact</table>
                    </contact>
                    <log>
                        <table>toluca_bot_log</table>
                    </log>
                    <message>
                        <table>toluca_bot_message</table>
                    </message>
                    <promotion>
                        <table>toluca_bot_promotion</table>
                    </promotion>
                    <queue>
                        <table>toluca_bot_queue</table>
                    </queue>
                </entities>
            </bot_mysql4>
        </models>
        <resources>
            <bot_setup>
                <setup>
                    <module>Toluca_Bot</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bot_setup>
            <bot_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bot_write>
            <bot_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bot_read>
        </resources>
        <fieldsets>
            <sales_convert_quote>
                <is_bot>
                    <to_order>*</to_order>
                </is_bot>
                <bot_type>
                    <to_order>*</to_order>
                </bot_type>
            </sales_convert_quote>
            <sales_convert_order>
                <is_bot>
                    <to_quote>*</to_quote>
                </is_bot>
                <bot_type>
                    <to_quote>*</to_quote>
                </bot_type>
            </sales_convert_order>
        </fieldsets>
    </global>
    <admin>
        <routers>
            <admin_bot>
                <use>admin</use>
                <args>
                    <module>Toluca_Bot</module>
                    <frontName>admin_bot</frontName>
                </args>
            </admin_bot>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <bot>
                    <file>toluca/bot.xml</file>
                </bot>
            </updates>
        </layout>
        <translate>
            <modules>
                <Toluca_Bot>
                    <files>
                        <default>Toluca_Bot.csv</default>
                    </files>
                </Toluca_Bot>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <bot>
                <use>standard</use>
                <args>
                    <module>Toluca_Bot</module>
                    <frontName>bot</frontName>
                </args>
            </bot>
        </routers>
        <layout>
            <updates>
                <bot>
                    <file>toluca/bot.xml</file>
                </bot>
            </updates>
        </layout>
        <translate>
            <modules>
                <Toluca_Bot>
                    <files>
                        <default>Toluca_Bot.csv</default>
                    </files>
                </Toluca_Bot>
            </modules>
        </translate>
    </frontend>
</config>

