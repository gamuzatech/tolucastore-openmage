<config>
    <api>
        <resources>
            <bot_info translate="title" module="bot">
                <model>bot/info_api</model>
                <title>Bot Information API</title>
                <acl>bot/info</acl>
                <methods>
                    <store_url translate="title" module="bot">
                        <title>Set a store URL for the bot</title>
                        <acl>bot/info/store_url</acl>
                        <method>storeUrl</method>
                    </store_url>
                    <whatsapp_url translate="title" module="bot">
                        <title>Set a whatsapp URL for the bot</title>
                        <acl>bot/info/whatsapp_url</acl>
                        <method>whatsappUrl</method>
                    </whatsapp_url>
                </methods>
                <faults translate="message" module="bot">
                    <data_invalid>
                        <code>100</code>
                        <message>Invalid data given. Details in error message.</message>
                    </data_invalid>
                </faults>
            </bot_info>
            <bot_config translate="title" module="bot">
                <model>bot/config_api</model>
                <title>Bot Config API</title>
                <acl>bot/config</acl>
                <methods>
                    <basic_auth translate="title" module="bot">
                        <title>Set a basic auth for the bot</title>
                        <acl>bot/config/basic_auth</acl>
                        <method>basicAuth</method>
                    </basic_auth>
                </methods>
                <faults translate="message" module="bot">
                    <data_invalid>
                        <code>100</code>
                        <message>Invalid data given. Details in error message.</message>
                    </data_invalid>
                </faults>
            </bot_config>
            <bot_contact translate="title" module="bot">
                <model>bot/contact_api</model>
                <title>Bot Contact API</title>
                <acl>bot/contact</acl>
                <methods>
                    <add translate="title" module="bot">
                        <title>Add a contact for the bot</title>
                        <acl>bot/contact/add</acl>
                    </add>
                    <list translate="title" module="bot">
                        <title>List contacts from the bot</title>
                        <acl>bot/contact/list</acl>
                        <method>items</method>
                    </list>
                </methods>
                <faults translate="message" module="bot">
                    <invalid_contact_data>
                        <code>100</code>
                        <message>Contact's data is not valid.</message>
                    </invalid_contact_data>
                    <data_invalid>
                        <code>200</code>
                        <message>Invalid data given. Details in error message.</message>
                    </data_invalid>
                    <add_contact_fault>
                        <code>300</code>
                        <message>Contact(s) could not be added. </message>
                    </add_contact_fault>
                </faults>
            </bot_contact>
            <bot_chat translate="title" module="bot">
                <model>bot/chat_api</model>
                <title>Bot Chat API</title>
                <acl>bot/chat</acl>
                <methods>
                    <message translate="title" module="bot">
                        <title>Send a message to the chat</title>
                        <acl>bot/chat/message</acl>
                    </message>
                </methods>
            </bot_chat>
            <bot_message translate="title" module="bot">
                <model>bot/message_api</model>
                <title>Bot Message API</title>
                <acl>bot/message</acl>
                <methods>
                    <list translate="title" module="bot">
                        <title>Get list of messages from the chat</title>
                        <acl>bot/message/list</acl>
                        <method>items</method>
                    </list>
                    <add translate="title" module="bot">
                        <title>Add messages to the chat</title>
                        <acl>bot/message/add</acl>
                        <method>add</method>
                    </add>
                </methods>
            </bot_message>
            <bot_category translate="title" module="bot">
                <model>bot/category_api</model>
                <title>Bot Category API</title>
                <acl>bot/category</acl>
                <methods>
                    <list translate="title" module="bot">
                        <title>List categories from the bot</title>
                        <acl>bot/category/list</acl>
                        <method>items</method>
                    </list>
                </methods>
            </bot_category>
            <bot_product translate="title" module="bot">
                <model>bot/product_api</model>
                <title>Bot Product API</title>
                <acl>bot/product</acl>
                <methods>
                    <list translate="title" module="bot">
                        <title>List products from the bot</title>
                        <acl>bot/product/list</acl>
                        <method>items</method>
                    </list>
                    <info translate="title" module="bot">
                        <title>Info products from the bot</title>
                        <acl>bot/product/info</acl>
                        <method>info</method>
                    </info>
                </methods>
            </bot_product>
            <bot_cart translate="title" module="bot">
                <model>bot/cart_api</model>
                <title>Bot Cart API</title>
                <acl>bot/cart</acl>
                <methods>
                    <info translate="title" module="bot">
                        <title>Info products from the bot</title>
                        <acl>bot/cart/info</acl>
                        <method>info</method>
                    </info>
                    <review translate="title" module="bot">
                        <title>Review products from the bot</title>
                        <acl>bot/cart/review</acl>
                        <method>review</method>
                    </review>
                    <order translate="title" module="bot">
                        <title>Create order from the bot</title>
                        <acl>bot/cart/order</acl>
                        <method>order</method>
                    </order>
                </methods>
            </bot_cart>
            <bot_cart_product translate="title" module="bot">
                <model>bot/cart_product_api</model>
                <title>Bot Cart Product API</title>
                <acl>bot/cart_product</acl>
                <methods>
                    <add translate="title" module="bot">
                        <title>Add products from the bot</title>
                        <acl>bot/cart_product/add</acl>
                        <method>add</method>
                    </add>
                </methods>
            </bot_cart_product>
            <bot_cart_customer translate="title" module="bot">
                <model>bot/cart_customer_api</model>
                <title>Bot Cart Customer API</title>
                <acl>bot/cart_customer</acl>
                <methods>
                    <address translate="title" module="bot">
                        <title>Set customer address to the bot</title>
                        <acl>bot/cart_customer/address</acl>
                        <method>address</method>
                    </address>
                </methods>
            </bot_cart_customer>
            <bot_cart_shipping translate="title" module="bot">
                <model>bot/cart_shipping_api</model>
                <title>Bot Cart Shipping API</title>
                <acl>bot/cart_shipping</acl>
                <methods>
                    <list translate="title" module="bot">
                        <title>List shippings from the bot</title>
                        <acl>bot/cart_shipping/list</acl>
                        <method>items</method>
                    </list>
                    <set translate="title" module="bot">
                        <title>Set shipping method to the bot</title>
                        <acl>bot/cart_shipping/set</acl>
                        <method>set</method>
                    </set>
                </methods>
            </bot_cart_shipping>
            <bot_cart_payment translate="title" module="bot">
                <model>bot/cart_payment_api</model>
                <title>Bot Cart Payment API</title>
                <acl>bot/cart_payment</acl>
                <methods>
                    <list translate="title" module="bot">
                        <title>List payments from the bot</title>
                        <acl>bot/cart_payment/list</acl>
                        <method>items</method>
                    </list>
                    <set translate="title" module="bot">
                        <title>Set payment method to the bot</title>
                        <acl>bot/cart_payment/set</acl>
                        <method>set</method>
                    </set>
                </methods>
            </bot_cart_payment>
        </resources>
        <acl>
            <resources>
                <bot translate="title" module="bot">
                    <title>Toluca Bot API</title>
                    <sort_order>0</sort_order>
                    <info translate="title" module="bot">
                        <title>Information</title>
                        <store_url translate="title" module="bot">
                            <title>Set a store URL for the bot</title>
                        </store_url>
                        <whatsapp_url translate="title" module="bot">
                            <title>Set a whatsapp URL for the bot</title>
                        </whatsapp_url>
                    </info>
                    <config translate="title" module="bot">
                        <title>Config</title>
                        <basic_auth translate="title" module="bot">
                            <title>Set a basic auth for the bot</title>
                        </basic_auth>
                    </config>
                    <contact translate="title" module="bot">
                        <title>Contact</title>
                        <add translate="title" module="bot">
                            <title>Add a contact for the bot</title>
                        </add>
                        <list translate="title" module="bot">
                            <title>List contacts from the bot</title>
                        </list>
                    </contact>
                    <chat translate="title" module="bot">
                        <title>Chat</title>
                        <message translate="title" module="bot">
                            <title>Send a message to the chat</title>
                        </message>
                    </chat>
                    <message translate="title" module="bot">
                        <title>Message</title>
                        <list translate="title" module="bot">
                            <title>Get list of messages from the chat</title>
                        </list>
                        <add translate="title" module="bot">
                            <title>Add messages to the chat</title>
                        </add>
                    </message>
                    <category translate="title" module="bot">
                        <title>Category</title>
                        <list translate="title" module="bot">
                            <title>List categories from the bot</title>
                        </list>
                    </category>
                    <product translate="title" module="bot">
                        <title>Product</title>
                        <list translate="title" module="bot">
                            <title>List products from the bot</title>
                        </list>
                        <info translate="title" module="bot">
                            <title>Info products from the bot</title>
                        </info>
                    </product>
                    <cart translate="title" module="bot">
                        <title>Cart</title>
                        <info translate="title" module="bot">
                            <title>Info products from the bot</title>
                        </info>
                        <review translate="title" module="bot">
                            <title>Review products from the bot</title>
                        </review>
                        <order translate="title" module="bot">
                            <title>Create order from the bot</title>
                        </order>
                    </cart>
                    <cart_product translate="title" module="bot">
                        <title>Cart Product</title>
                        <add translate="title" module="bot">
                            <title>Add products from the bot</title>
                        </add>
                    </cart_product>
                    <cart_customer translate="title" module="bot">
                        <title>Cart Customer</title>
                        <address translate="title" module="bot">
                            <title>Set customer address to the bot</title>
                        </address>
                    </cart_customer>
                    <cart_shipping translate="title" module="bot">
                        <title>Cart Shipping</title>
                        <list translate="title" module="bot">
                            <title>List shippings from the bot</title>
                        </list>
                        <set translate="title" module="bot">
                            <title>Set shipping method to the bot</title>
                        </set>
                    </cart_shipping>
                    <cart_payment translate="title" module="bot">
                        <title>Cart Payment</title>
                        <list translate="title" module="bot">
                            <title>List payments from the bot</title>
                        </list>
                        <set translate="title" module="bot">
                            <title>Set payment method to the bot</title>
                        </set>
                    </cart_payment>
                </bot>
            </resources>
        </acl>
    </api>
</config>

