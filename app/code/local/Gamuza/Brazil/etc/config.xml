<config>
    <modules>
        <Gamuza_Brazil>
            <version>0.0.13</version>
        </Gamuza_Brazil>
    </modules>
    <global>
        <helpers>
            <brazil>
                <class>Gamuza_Brazil_Helper</class>
            </brazil>
        </helpers>
        <blocks>
            <brazil>
                <class>Gamuza_Brazil_Block</class>
            </brazil>
        </blocks>
        <models>
            <brazil>
                <class>Gamuza_Brazil_Model</class>
                <resourceModel>brazil_mysql4</resourceModel>
            </brazil>
            <brazil_mysql4>
                <class>Gamuza_Brazil_Model_Mysql4</class>
                <entities>
                    <!-- DF-e -->
                    <ibpt>
                        <table>gamuza_brazil_ibpt</table>
                    </ibpt>
                    <cest>
                        <table>gamuza_brazil_cest</table>
                    </cest>
                    <cfop>
                        <table>gamuza_brazil_cfop</table>
                    </cfop>
                    <country>
                        <table>gamuza_brazil_country</table>
                    </country>
                    <region>
                        <table>gamuza_brazil_region</table>
                    </region>
                    <city>
                        <table>gamuza_brazil_city</table>
                    </city>
                    <!-- NFC-e -->
                    <nfce>
                        <table>gamuza_brazil_nfce</table>
                    </nfce>
                    <nfce_response>
                        <table>gamuza_brazil_nfce_response</table>
                    </nfce_response>
                    <nfce_event>
                        <table>gamuza_brazil_nfce_event</table>
                    </nfce_event>
                    <!-- NF-e -->
                    <nfe>
                        <table>gamuza_brazil_nfe</table>
                    </nfe>
                    <nfe_response>
                        <table>gamuza_brazil_nfe_response</table>
                    </nfe_response>
                    <nfe_event>
                        <table>gamuza_brazil_nfe_event</table>
                    </nfe_event>
                </entities>
            </brazil_mysql4>
        </models>
        <resources>
            <brazil_setup>
                <setup>
                    <module>Gamuza_Brazil</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brazil_setup>
            <brazil_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brazil_write>
            <brazil_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brazil_read>
        </resources>
        <fieldsets>
            <sales_convert_quote>
                <brazil_rg_ie>
                    <to_order>*</to_order>
                </brazil_rg_ie>
                <brazil_ie_icms>
                    <to_order>*</to_order>
                </brazil_ie_icms>
                <is_pix>
                    <to_order>*</to_order>
                </is_pix>
            </sales_convert_quote>
            <sales_convert_quote_item>
                <brazil_ncm>
                    <to_order_item>*</to_order_item>
                </brazil_ncm>
                <brazil_cest>
                    <to_order_item>*</to_order_item>
                </brazil_cest>
                <brazil_cfop>
                    <to_order_item>*</to_order_item>
                </brazil_cfop>
            </sales_convert_quote_item>
            <sales_convert_order>
                <brazil_rg_ie>
                    <to_quote>*</to_quote>
                </brazil_rg_ie>
                <brazil_ie_icms>
                    <to_quote>*</to_quote>
                </brazil_ie_icms>
                <is_pix>
                    <to_quote>*</to_quote>
                </is_pix>
            </sales_convert_order>
            <sales_convert_order_item>
                <brazil_ncm>
                    <to_quote_item>*</to_quote_item>
                </brazil_ncm>
                <brazil_cest>
                    <to_quote_item>*</to_quote_item>
                </brazil_cest>
                <brazil_cfop>
                    <to_quote_item>*</to_quote_item>
                </brazil_cfop>
            </sales_convert_order_item>
        </fieldsets>
        <events>
            <sales_quote_item_set_product>
                <observers>
                    <gamuza_brazil_sales_quote_item_set_product>
                        <class>brazil/observer</class>
                        <method>salesQuoteItemSetProduct</method>
                    </gamuza_brazil_sales_quote_item_set_product>
                </observers>
            </sales_quote_item_set_product>
            <sales_quote_save_before>
                <observers>
                    <gamuza_brazil_sales_quote_save_before>
                        <class>brazil/observer</class>
                        <method>salesQuoteSaveBefore</method>
                    </gamuza_brazil_sales_quote_save_before>
                </observers>
            </sales_quote_save_before>
            <sales_order_place_after>
                <observers>
                    <gamuza_brazil_sales_order_place_after>
                        <class>brazil/observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </gamuza_brazil_sales_order_place_after>
                </observers>
            </sales_order_place_after>
            <!-- Gamuza_Basic -->
            <basic_magento_api_info>
                <observers>
                    <gamuza_brazil_basic_magento_api_info>
                        <class>brazil/observer</class>
                        <method>basicMagentoApiInfo</method>
                    </gamuza_brazil_basic_magento_api_info>
                </observers>
            </basic_magento_api_info>
        </events>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <brazil_ncm />
                        <brazil_cest />
                        <brazil_cfop />
                    </product_attributes>
                </item>
            </quote>
            <order>
                <item>
                    <product_attributes>
                        <brazil_ncm />
                        <brazil_cest />
                        <brazil_cfop />
                    </product_attributes>
                </item>
            </order>
        </sales>
    </global>
    <admin>
        <routers>
            <admin_brazil>
                <use>admin</use>
                <args>
                    <module>Gamuza_Brazil</module>
                    <frontName>admin_brazil</frontName>
                </args>
            </admin_brazil>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <brazil>
                    <file>gamuza/brazil.xml</file>
                </brazil>
            </updates>
        </layout>
        <translate>
            <modules>
                <Gamuza_Brazil>
                    <files>
                        <default>Gamuza_Brazil.csv</default>
                    </files>
                </Gamuza_Brazil>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <brazil>
                <use>standard</use>
                <args>
                    <module>Gamuza_Brazil</module>
                    <frontName>brazil</frontName>
                </args>
            </brazil>
        </routers>
        <translate>
            <modules>
                <Gamuza_Brazil>
                    <files>
                        <default>Gamuza_Brazil.csv</default>
                    </files>
                </Gamuza_Brazil>
            </modules>
        </translate>
        <product>
            <collection>
                <attributes>
                    <brazil_ncm />
                    <brazil_cest />
                    <brazil_cfop />
                </attributes>
            </collection>
        </product>
    </frontend>
    <default>
        <brazil>
            <ibpt>
                <validate>1</validate>
            </ibpt>
            <cest>
                <validate>0</validate>
            </cest>
            <cfop>
                <validate>0</validate>
            </cfop>
            <country>
                <validate>0</validate>
            </country>
            <region>
                <validate>0</validate>
            </region>
            <city>
                <validate>0</validate>
            </city>
            <certificate>
                <cache>1</cache>
                <days_validate>14</days_validate>
            </certificate>
            <setting>
                <crt_id>4</crt_id>
                <environment_id>2</environment_id>
                <version>4.00</version>
                <timeout>12000</timeout>
                <!-- Brazil -->
                <country_id>1058</country_id>
                <!-- São Paulo -->
                <region_id>35</region_id>
                <!-- São Paulo -->
                <city_id>3550308</city_id>
            </setting>
            <nfce>
                <print_id>4</print_id>
                <batch_id>1</batch_id>
                <number_id>1</number_id>
                <model_id>65</model_id>
                <series_id>1</series_id>
                <correct_id>1</correct_id>
                <cancel_id>1</cancel_id>
                <cancel_validate>1</cancel_validate>
                <authorize_validate>1</authorize_validate>
                <correct_validate>1</correct_validate>
            </nfce>
            <nfe>
                <print_id>1</print_id>
                <batch_id>1</batch_id>
                <number_id>1</number_id>
                <model_id>55</model_id>
                <series_id>1</series_id>
                <correct_id>1</correct_id>
                <cancel_id>1</cancel_id>
                <cancel_validate>1</cancel_validate>
                <authorize_validate>1</authorize_validate>
                <correct_validate>1</correct_validate>
            </nfe>
            <cashier>
                <show_history_nfes>1</show_history_nfes>
                <show_history_nfces>1</show_history_nfces>
            </cashier>
        </brazil>
        <payment>
            <gamuza_brazil_pix>
                <active>0</active>
                <title>Payment via Pix</title>
                <order_status>pending</order_status>
                <paid_status>paid</paid_status>
                <allowspecific>0</allowspecific>
                <group>offline</group>
                <model>brazil/payment_method_pix</model>
            </gamuza_brazil_pix>
        </payment>
    </default>
</config>

