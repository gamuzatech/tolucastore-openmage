                    <store_not_specified>
                        <code>100</code>
                        <message>Requested store not specified.</message>
                    </store_not_specified>
                    <store_not_exists>
                        <code>200</code>
                        <message>Can not make operation because store is not exists</message>
                    </store_not_exists>
                    <quote_not_exists>
                        <code>300</code>
