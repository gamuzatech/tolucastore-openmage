<config>
    <tabs>
        <gamuza translate="label" module="mobile">
            <label>Gamuza Technologies</label>
            <sort_order>0</sort_order>
        </gamuza>
    </tabs>
    <sections>
        <api>
            <tab>gamuza</tab>
            <groups>
                 <mobile translate="label" module="mobile">
                    <label>Mobile</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <store_view translate="label">
                            <label>Store View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_store</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_view>
                    </fields>
                </mobile>
            </groups>
        </api>
        <customer>
            <groups>
                <create_account>
                    <fields>
                        <email_prefix translate="label" module="mobile">
